{
	"name": "ngx-ow",
	"version": "0.2.0",
	"description": "Angular form validation on steroids",
	"license": "MIT",
	"repository": "SamVerschueren/ngx-ow",
	"author": {
		"name": "Sam Verschueren",
		"email": "sam.verschueren@gmail.com"
	},
	"engines": {
		"node": ">=6"
	},
	"scripts": {
		"pretest": "npm run compile -- --sourceMap",
		"test": "npm run lint && ava dist/test.js",
		"lint": "tslint -p . --format stylish",
		"compile": "npm run clean && tsc",
		"clean": "del-cli dist",
		"build": "npm run clean && ng-packagr -p package.json",
		"release": "npm run build && cd dist && npm publish && cd .."
	},
	"keywords": [
		"angular",
		"ng",
		"ngx",
		"form",
		"validation",
		"type",
		"types",
		"check",
		"checking",
		"guard",
		"guards",
		"assert",
		"assertion",
		"predicate",
		"predicates",
		"is",
		"validate",
		"validation",
		"utility",
		"util",
		"typeof",
		"instanceof",
		"object"
	],
	"peerDependencies": {
		"@angular/forms": "^8.2.14",
		"ow": "^0.7.0",
		"typescript": "3.6.2"
	},
	"devDependencies": {
		"@angular/common": "^8.2.14",
		"@angular/compiler": "^8.2.14",
		"@angular/compiler-cli": "^8.2.14",
		"@angular/core": "^8.2.14",
		"@angular/forms": "^8.2.14",
		"@angular/platform-browser": "^8.2.14",
		"@types/node": "^12.0.0",
		"ava": "^1.0.0-beta.8",
		"del-cli": "^1.1.0",
		"ng-packagr": "^5.4.0",
		"ow": "^0.7.0",
		"rxjs": "^6.4.0",
		"tslint": "^5.11.0",
		"tslint-xo": "^0.9.0",
		"typescript": "^3.5.3"
	},
	"ngPackage": {
		"lib": {
			"entryFile": "source/index.ts"
		}
	},
	"ava": {
		"babel": false,
		"compileEnhancements": false,
		"require": [
			"esm"
		]
	}
}
